@model Discuzit.Models.ViewModels.Answer

<div class="col-sm-12">
    @using (Html.BeginForm("Create", "Answers", new { id= ViewBag.Question.Id}, FormMethod.Post))
    {
    <div class="form-group">
        @Html.LabelFor(m => m.Body)
        @Html.TextAreaFor(m => m.Body, new { @class = "form-control" })
    </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    }
</div>
